  </header>

  <!-- Registration Section-->
  <section class="vh-140" style="background-color: #eee;">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                    <form class="mx-1 mx-md-4" onsubmit="return validateRegistration()">
                      <!-- First Name Field -->
                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                          <input type="text" id="firstName" class="form-control" required/>
                          <label class="form-label" for="firstName">First Name</label>
                        </div>
                      </div>
                      <!-- Last Name Field -->
                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                          <input type="text" id="lastName" class="form-control" required/>
                          <label class="form-label" for="lastName">Last Name</label>
                        </div>
                      </div>
                    <!-- Company Field -->
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                      <div data-mdb-input-init class="form-outline flex-fill mb-0">
                        <input type="text" id="company" class="form-control" />
                        <label class="form-label" for="company">Company</label>
                      </div>
                    </div>
                    <!-- Email Field -->
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                      <div data-mdb-input-init class="form-outline flex-fill mb-0">
                        <input type="email" id="email" class="form-control" />
                        <label class="form-label" for="email">Your Email</label>
                      </div>
                    </div>
                    <!-- Password Field -->
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                      <div data-mdb-input-init class="form-outline flex-fill mb-0">
                        <input type="password" id="password" class="form-control" />
                        <label class="form-label" for="password">Password</label>
                      </div>
                    </div>
                    <!-- Repeat Password Field -->
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                      <div data-mdb-input-init class="form-outline flex-fill mb-0">
                        <input type="password" id="repeatPassword" class="form-control" />
                        <label class="form-label" for="repeatPassword">Repeat your password</label>
                      </div>
                    </div>
                    <!-- User Type Field -->
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-users fa-lg me-3 fa-fw"></i>
                      <div data-mdb-input-init class="form-outline flex-fill mb-0">
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="userType" id="buyer" value="buyer" required>
                          <label class="form-check-label" for="buyer">Buyer</label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="userType" id="seller" value="seller" required>
                          <label class="form-check-label" for="seller">Seller</label>
                        </div>
                      </div>
                    </div>
                      <!-- Security Question Drop-down -->
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-question-circle fa-lg me-3 fa-fw"></i>
                      <div data-mdb-input-init class="form-outline flex-fill mb-0">
                        <select id="securityQuestion" class="form-control">
                          <option value="" disabled selected>Select your security question</option>
                          <option value="woodchuck">How much wood could a woodchuck chuck if a woodchuck could chuck wood?</option>
                        </select>
                        <label class="form-label" for="securityQuestion">Security Question</label>
                      </div>
                    </div>
                    <!-- Security Question Answer Input -->
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-pencil-alt fa-lg me-3 fa-fw"></i>
                      <div data-mdb-input-init class="form-outline flex-fill mb-0">
                        <input type="text" id="securityAnswer" class="form-control" />
                        <label class="form-label" for="securityAnswer">Answer</label>
                      </div>
                    </div>
                    <!-- Terms of Service -->
                    <div class="form-group form-check">
                      <input type="checkbox" class="form-check-input" id="termsCheckbox">
                      <label class="form-check-label" for="termsCheckbox">
                        I agree to all statements in <a href="#!" data-toggle="modal" data-target="#terms-modal">Terms of service</a>
                      </label>
                    </div>
                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg">Register</button>
                    </div>
                  </form>
                </div>
                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                    class="img-fluid" alt="Sample image">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

