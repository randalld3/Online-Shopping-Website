<!DOCTYPE html>
<html>
<head>
  <title>Glasses Shopping Portal Home</title>
  <link rel='stylesheet' href='/stylesheets/common.css' />
  <link rel='stylesheet' href='/stylesheets/confirmation.css' />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
</head>
<body>

  <!-- Header Section -->
  <%- include('header') %>

  <!-- Main Section-->
  <div class="confirmation-header">
    <h1>Thank You!</h1>
    <p>Your order has been placed.</p>
  </div>
  <div class="summary-header">
    Order Summary
  </div>
  
  <div class="order-summary">
    <div class="order-items">
      <% Object.keys(order).forEach(productName => { %>
      <% const quantity = order[productName][0] %>
        <div class="order-item">
          <img src="/images/<%= productName %>.jpg" alt="<%= productName %>" class="product-image" />
          <div class="product-details">
            <h2 class="product-name"><%= productName %></h2>
            <p class="estimated-delivery">Estimated Delivery: <%= date %></p>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <!-- Footer Section -->
  <%- include('footer') %>

  <!-- Sidebar Modal -->
  <%- include('sidebar') %>
  
<script src="/javascripts/product.js"></script>
</body>
</html>
